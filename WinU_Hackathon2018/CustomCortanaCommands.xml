<?xml version="1.0" encoding="utf-8" ?>

<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="CustomCommands">
    <CommandPrefix> I would like to </CommandPrefix>
    <Example> Watch a video </Example>

    <Command Name="WatchVideoCommand">
      <Example> Watch a video </Example>
      <ListenFor> Watch video </ListenFor>
      <Feedback> Opening your favourite app </Feedback>
      <Navigate/>
    </Command>

    <Command Name="DrawingCommand">
      <Example> draw something </Example>
      <ListenFor> draw [something] </ListenFor>
      <Feedback> Opening Paint 3D </Feedback>
      <Navigate/>
    </Command>
    
      <Command Name="PhotoEditCommand">
      <Example> Edit some photo </Example>
      <ListenFor> Edit [some] [a] photo </ListenFor>
      <Feedback> Opening photo editor for you </Feedback>
      <Navigate/>
    </Command>
    
    <Command Name="GoToMeetingCommand">
      <Example> Go to the meeting </Example>
      <ListenFor> connect to the meeting </ListenFor>
      <Feedback> Connection you to the meething </Feedback>
      <Navigate/>
    </Command>

    <Command Name="WriteBirthdayCardCommand">
      <Example> Write a birthday card </Example>
      <ListenFor> [Write] [Create] [a] birthday card </ListenFor>
      <Feedback> Creating a birthday card with Powerpoint </Feedback>
      <Navigate/>
    </Command>

    <Command Name="WriteCVCommand">
      <Example> Write a CV </Example>
      <ListenFor> [Write] [Create] [a] CV </ListenFor>
      <Feedback> Creating a CV with Word </Feedback>
      <Navigate/>
    </Command>

    <Command Name="WriteResumeCommand">
      <Example> Write a resume </Example>
      <ListenFor> [Write] [Create] [a] Resume </ListenFor>
      <Feedback> Creating a Resume with Word </Feedback>
      <Navigate/>
    </Command>

    <Command Name="WriteLetterCommand">
      <Example> Write a letter </Example>
      <ListenFor> [Write] [Create] [a] letter </ListenFor>
      <Feedback> Creating a letter with Word </Feedback>
      <Navigate/>
    </Command>

    <Command Name="WriteLetterToCommand">
      <Example> Write a letter </Example>
      <ListenFor> [Write] [Create] [a] letter to {*} </ListenFor>
      <Feedback> Creating a letter with Word </Feedback>
      <Navigate/>
    </Command>
    <Command Name="WatchAVideoCommand">
      <Example> Watch a video </Example>
      <ListenFor>watch {*} </ListenFor>
      <Feedback> Alright let's watch </Feedback>
      <Navigate/>
    </Command>

  </CommandSet>

</VoiceCommands>